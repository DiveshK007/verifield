{
  "name": "verifield",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "hardhat compile",
    "node": "hardhat node --hostname 127.0.0.1 --port 8545",
    "deploy:local": "hardhat run scripts/deploy.ts",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network bsc_testnet",
    "seed": "ts-node scripts/seed.ts",
    "dev:all": "concurrently -k \"pnpm:node\" \"sleep 2 && pnpm:deploy:local\" \"cd frontend && pnpm dev\""
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "3.1.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "dotenv": "^16.4.5",
    "ethers": "6.15.0",
    "hardhat": "^2.26.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.2"
  },
  "type": "commonjs"
}
